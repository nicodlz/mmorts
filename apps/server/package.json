{
  "name": "server",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "dev:prod": "cross-env NODE_ENV=production ts-node-dev --respawn --transpile-only src/index.ts",
    "dev:prod:windows": "set NODE_ENV=production && ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:prod": "cross-env NODE_ENV=production node dist/index.js",
    "lint": "eslint src --ext ts",
    "check-types": "tsc --noEmit"
  },
  "dependencies": {
    "@colyseus/arena": "^0.15.0-preview.1",
    "@colyseus/monitor": "^0.15.0",
    "@types/matter-js": "^0.19.8",
    "colyseus": "^0.15.8",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "matter-js": "^0.20.0",
    "shared": "workspace:*"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.4",
    "cross-env": "^7.0.3",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.1.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0"
  }
}